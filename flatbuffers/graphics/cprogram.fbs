include "graphics/glenum.idl.fbs";
include "common/resource.idl.fbs";

namespace prime.graphics;

struct StageObject {
    object:uint32;
    type:GlEnum;
}

struct ProgramRuntime {
    objects:[StageObject:5];
    program:uint32;
}

table ProgramFeature {
    key:string;
    value:string;
}

table Program {
    source:uint32;
    features:[ProgramFeature];
    runtime:ProgramRuntime(required);
}
